{
  "env": {
    "cypress/globals": true,
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/base",
    // "plugin:@typescript-eslint/recommended", // TODO: To replace the "base" set, but too many issues for now.
    "plugin:prettier/recommended",
    "plugin:cypress/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["cypress"],
  "rules": {
    "cypress/no-unnecessary-waiting": "warn"
  }
}
